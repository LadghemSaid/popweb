<urlset xmlns="https://pop-web.fr/sitemaps.xml">
    <url>
        <loc>https://pop-web.fr/</loc>
        <lastmod>2020-03-23</lastmod>
        <changefreq>daily</changefreq>
        <priority>1</priority>
    </url>
    <url>
        <loc>https://pop-web.fr/about</loc>
        <lastmod>2020-03-23</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>https://pop-web.fr/about</loc>
        <lastmod>2020-03-23</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
    </url>
    <url>
        <loc>https://pop-web.fr/service</loc>
        <lastmod>2020-03-23</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
    </url>
    <url>
        <loc>https://pop-web.fr/articles</loc>
        <lastmod>2020-03-23</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.9</priority>
    </url>
    <url>
        <loc>https://pop-web.fr/contact</loc>
        <lastmod>2020-03-23</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    {% for url in urls %}
        <url>
            {# check if hostname is not already in url #}
            <loc>{% if url.loc|replace({hostname:''}) == url.loc %}https://{{ hostname }}{{ url.loc }}{% else %}{{ url.loc }}{% endif %}</loc>
            {% if url.lastmod is defined %}
                <lastmod>{{ url.lastmod }}</lastmod>
            {% endif %}
            {% if url.changefreq is defined %}
                <changefreq>{{ url.changefreq }}</changefreq>
            {% endif %}
            {% if url.priority is defined %}
                <priority>{{ url.priority }}</priority>
            {% endif %}
        </url>
    {% endfor %}
</urlset>
