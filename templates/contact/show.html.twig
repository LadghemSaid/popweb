{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}


{% block body %}
    <div class="img-banner">
        <img src="{{ asset('pho/banner-blog.png') }}" alt="Bannière blog" class="banner">
        <div class="text">
            <h1>Notre Contact</h1>
                <p>Découvrez en plus sur nous, on en découvrira plus sur vous.</p>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
<div class="contact">
<div class="container mt-50 mb-50">
        <div class="row">
        <div class="col-md-8 p40">
        <h2>Contactez nous</h2>
        <p>Une question, un projet, nous vous répondrons au plus vite !</p>

            {{ form_start(formContact,{'attr':{'class':'contact_form'}}) }}
            {{ form_row(formContact.fullName , {'attr': {'class': '','placeholder':"Votre nom" }, 'label_attr': {'class': 'sr-only'}}) }}
            {{ form_row(formContact.fromEmail , {'attr': {'class': '','placeholder':"Votre email" }, 'label_attr': {'class': 'sr-only'}}) }}
            {{ form_row(formContact.message , {'attr': {'class': '','placeholder':"Votre message ..." }, 'label_attr': {'class': 'sr-only'}}) }}
            {{ form_end(formContact) }}
        </div>
        <div class="col-md-4 p40 grey-background">
        <h2>Venir nous rencontrer</h2>
        <div class="d-flex">
                    <i class="fas fa-envelope"></i>
                    <a href="mailto:contact.popweb@gmail.com">contact.popweb@gmail.com</a>
                </div>

                <div class="d-flex mt-10">
                    <i class="fas fa-map-marker-alt"></i>
                    <p>l'université SP, <br>16 Rue de l'Université, <br>62307 Lens</p>
                </div>
                <div class="social">
                <a href="https://www.facebook.com/popweb.conception/" target="_blank"><i class="fab fa-facebook-square"></i></a>
                <a href="https://twitter.com/PopWeb3" target="_blank"><i class="fab fa-twitter-square"></i></a>
                </div>
        </div>  
        </div>
    </div>


    </div>
</div>


{% endblock %}
{% block javascripts %}

{% endblock %}



