{% extends 'base.html.twig' %}

{% block title %}
	PopWeb -
	{{ article.title }}
{% endblock %}
{% block gtag %}
	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-166106615-1"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
        function gtag() {
        dataLayer.push(arguments);
        }
        gtag('js', new Date());

        gtag('config', 'UA-166106615-1');
	</script>

{% endblock %}
{% block meta_description %}
	<meta name="description" content="Agence web à Lens. Conception et développement de sites sur mesure. Communication digitale, référencement SEO Google."/>
{% endblock %}
{% block meta_robots %}
	<meta name="robots" content="unavailable_after: [date ]">
{% endblock %}
{% block google %}
	<meta name="google" content="unavailable_after: [date ]">
{% endblock %}


{% block body %}
	<div class="img-banner">
		<img src="{{ asset('pho/banner-blog.jpg') }}" alt="Bannière blog" class="banner">
		<div class="text">
			<h1>{{ article.title }}</h1>
		</div>
	</div>

	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">
			{{ message }}
		</div>
	{% endfor %}

	<div class="container">
		<div class="row">
			<div class="col-md-12 article-item-show">
				<div class="title-section">
					<h1 class="p-title">{{ article.title }}</h1>
					<p class="p-date">Mis en ligne le
						                        :
						{{ article.updatedAt | date('d/m/Y H:i', timezone='Europe/Paris') }}
					</p>
				</div>
				<div class="image-section">
					<img class="d-block w-100 lazyload p-img" src="{{ asset("img/low_res.jpg") }}" data-src="{{ app_path_articles_images }}{{ article.image }}" alt="{{ article.imgAlternate }}" height="290px"/>
				</div>
				<div class="p-text">
					<p class="p-description">{{ article.text | raw }}</p>
				</div>
			</div>
		</div>

		{% include '/comment/comment.html.twig' %}

	</div>


{% endblock %}
{% block javascripts %}
	<script>

		$(document).ready(() => {});
	</script>

{% endblock %}
