{% extends '/base.html.twig' %}

{% block title %}
    Recrutement
{% endblock %}

{% block style_custom %}

    <style>

    </style>
{% endblock %}
{% block body %}
    <div class="img-banner">
        <img src="{{ asset('pho/banner-recrutement.jpg') }}" alt="Bannière recrutement" class="banner">
        <div class="text">
            <h1>Notre Recrue</h1>
            <p>Découvrez si vous pouvez entrer dans notre équipe.</p>
        </div>
    </div>

    <div class="container">
        <div class="jumbotron">
            <h1>En ce moment, nous recherchons :</h1>
        </div>
        <div class="row">

            {% for job in jobs %}

                <div class="col-sm-4 article-item">
                    <a href="{{ path('job.show',{'slug':job.slug}) }}">
                        <img class="d-block lazyload "
                             src="{{ asset("img/low_res.jpg") }}"
                             data-src="{{ app_path_jobs_images }}{{ job.image }}"
                             alt="{{ job.imgAlternate }}"
                        />
                    </a>

                    <a href="{{ path('job.show',{'slug':job.slug}) }}">
                        <h2> {{ job.title|striptags|length >20 ? job.title|striptags|slice(0, 50) ~ '...' : job.title|striptags }} </h2>
                    </a>
                    <p class="p-date" data-date="{{ job.updatedAt| date('U') }}"></p>
                    <p class="p-description">{{ job.description|striptags|length > 100 ? job.description|striptags|slice(0, 100) ~ '...' : job.description|striptags }}</p>
                    <a href="{{ path('job.show',{'slug':job.slug}) }}" class="more">Voir plus</a>
                </div>



            {% endfor %}
            {% if jobs|length == 0 %}
                <div class="fullHeight">
                    <p>Les jobs seront bientot en ligne :)</p>
                </div>
            {% endif %}
        </div>

    </div>


{% endblock %}


