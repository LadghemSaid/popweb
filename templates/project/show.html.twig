{% extends 'base.html.twig' %}

{% block title %}
	PopWeb -
	{{ project.title }}
{% endblock %}
{% block gtag %}
	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-166106615-1"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
        function gtag() {
        dataLayer.push(arguments);
        }
        gtag('js', new Date());

        gtag('config', 'UA-166106615-1');
	</script>

{% endblock %}
{% block meta_description %}
	<meta name="description" content="Agence web à Lens. Conception et développement de sites sur mesure. Communication digitale, référencement SEO Google."/>
{% endblock %}
{% block meta_robots %}
	<meta name="robots" content="unavailable_after: [date ]">
{% endblock %}
{% block google %}
	<meta name="google" content="unavailable_after: [date ]">
{% endblock %}


{% block body %}

	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">
			{{ message }}
		</div>
	{% endfor %}
	<div class="img-banner">
		<img src="{{ asset('pho/banner-recrutement.jpg') }}" alt="Bannière recrutement" class="banner">
		<div class="text">
			<h1>{{ project.title }}</h1>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-12 article-item-show">
				<div id="scene">
					<img class="d-block w-100 lazyload p-img" src="{{ asset("img/low_res.jpg") }}" data-src="{{ app_path_projects_images }}{{ project.image }}" alt="{{ project.imgAlternate }}" height="290px"/>
					<img src="{{ app_path_default_images }}bg3.gif" class="animated" id="anim" alt="">
				</div>

				<div class="p-text">


					<p class="p-description">{{ project.text | raw }}</p>
					<p class="p-date">{{ project.updatedAt | date('d/m/Y H:i', timezone='Europe/Paris') }}
					</p>

				</div>
			</div>
		</div>


	</div>


{% endblock %}
{% block javascripts %}
	<script></script>

{% endblock %}
