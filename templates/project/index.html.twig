{% extends 'base.html.twig' %}

{% block title %}
    PopWeb - Réalisations
{% endblock %}
{% block gtag %}
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-166106615-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-166106615-1');
    </script>

{% endblock %}
{% block meta_description %}
    <meta name="description"
          content="Agence web à Lens. Conception et développement de sites sur mesure. Communication digitale, référencement SEO Google."/>
{% endblock %}
{% block meta_robots %}
    <meta name="robots" content="unavailable_after: [date ]">
{% endblock %}
{% block google %}
    <meta name="google" content="unavailable_after: [date ]">
{% endblock %}

{% block style_custom %}

    <style></style>
{% endblock %}
{% block body %}
    <div class="img-banner">
        <img src="{{ asset('pho/banner-blog.jpg') }}" alt="Bannière blog" class="banner">
        <div class="text">
            <h1>Nos travaux</h1>
            <p></p>
        </div>
    </div>
    <div class="container">
        <div class="jumbotron">
            <h1>Et bientôt le votre ?</h1>
        </div>

        <div class="row projects">

            {% for project in projects %}

                <div class="col-sm-4 article-item">
                    <a href="{{ path('project.show',{'slug':project.slug}) }}">
                        <img class="d-block lazyload "
                             src="{{ asset("img/low_res.jpg") }}"
                             data-src="{{ app_path_projects_images }}{{ project.image }}"
                             alt="{{ project.imgAlternate }}"
                        />
                    </a>

                    <a href="{{ path('project.show',{'slug':project.slug}) }}">
                        <h2> {{ project.title|striptags|length >20 ? project.title|striptags|slice(0, 50) ~ '...' : project.title|striptags }}  </h2>
                    </a>
                    <p class="p-date">Jan 18, 2019 </p>

                    <p class="p-description">{{ project.description|striptags|length > 100 ? project.description|striptags|slice(0, 100) ~ '...' : project.description|striptags }}</p>
                    <a href="{{ path('project.show',{'slug':project.slug}) }}" class="more">Voir plus</a>
                </div>



            {% endfor %}
            {% if projects|length == 0 %}
                <div class="fullHeight">
                    <p>Les projets seront bientot en ligne :)</p>
                </div>
            {% endif %}
        </div>
    </div>


{% endblock %}


{% block javascripts %}
    <script></script>
{% endblock %}
