{% extends 'base.html.twig' %}
{% block title %}
    Accueil
{% endblock %}
{% block style_custom %}
    <style>

    </style>

{% endblock %}
{% block body %}

    <div class="margium">
        <p style="display:block; max-width: 720px; margin: auto; font-size:large; padding: 70px 15px 30px 15px; text-align:justify;">
            Nous sommes une agence web fictive formée de 8 étudiants de la licence CréaWeb de Lens. Nous réalisation des
            sites web ainsi que certains contenus numérique pour des associations et les start-ups.
        </p>
    </div>
    <div id="segond-segment" class="margium">
        <img src="{{ asset("pho/surmesure.svg") }}" alt="sur mesure">
        <div id="description-seg">
            <h3>Sur mesure</h3>
            <p>
                Nous concevons des sites web sur mesures pour répondre au mieux à vos besoins ! Adapté à vos besoins,
                votre site web sera plus pertinent. Vous vous démarqueriez des autres nous travaillons pour rendre votre
                site mémorable. </p>
        </div>
    </div>
    <div id="segond-segment" class="margium">
        <img src="{{ asset("pho/top.svg") }}" alt="sur mesure">
        <div id="description-seg">
            <h3>Au top</h3>
            <p>
                Réalisation de qualité : design, chargement, SEO, ergonomie, technique. Notre équipe est capable
                d'intervenir sur tous les aspects d'un site web, ainsi celui-ci n'a plus de secret pour nous. </p>
        </div>
    </div>
    <div id="troisieme-segment">
        <div class="espace">
            <div class="margium">
                <h2>Nos réalisation antérieures </h2>
                <div class="liste">
                    {% for project in favoriteProjects %}
                        <a href="{{ path('project.show', {'slug':project.slug} ) }}" target="_blank" class="card">
                            <img class="d-block w-100 lazyload "
                                 src="{{ asset("img/low_res.jpg") }}"
                                 data-src="/uploads/images/projects/{{ project.image }}"
                                 alt="AlternateText"
                              />
                            <h4>{{ project.title }} </h4>
                        </a>
                    {% endfor %}

                </div>
                <div class="hidden">
                    {% for project in projects %}
                        <a href="{{ path('project.show', {'slug':project.slug} ) }}" target="_blank" class="card">
                            <img class="d-block w-100 lazyload "
                                 src="{{ asset("img/low_res.jpg") }}"
                                 data-src="/uploads/images/projects/{{ project.image }}"
                                 alt="AlternateText"
                            />
                            <h4>{{ project.title }} </h4>
                        </a>
                    {% endfor %}
                </div>
                <a href="#" onclick="unhide(event)"><span class="icon-center fa fa-chevron-down">VOIR PLUS</span></a>
            </div>
        </div>
    </div>
    <div id="quatrieme-segment">
        <div class="margium">

            <h2 class="c">Une question, un projet n'hésitez pas !</h2>
            <p class="c">Nous reviendrons vers vous dans de bref délais</p>

            {{ form_start(formContact) }}
            {{ form_row(formContact.fullName , {'attr': {'class': '','placeholder':"Votre nom" }, 'label': 'Votre nom' }) }}
            {{ form_row(formContact.fromEmail , {'attr': {'class': '','placeholder':"Votre email" }, 'label': 'Votre email'}) }}
            {{ form_row(formContact.message , {'attr': {'class': '','placeholder':"Votre message ..." }, 'label': 'Message','placeholder':"Votre message ..."}) }}



            {{ form_end(formContact) }}

        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script  type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        function unhide(e){
            e.preventDefault();
            if( e.target.classList.contains('active')){
                $('.hidden')[0].style.maxHeight  = '0px';
                e.target.innerText = 'VOIR PLUS';
                e.target.classList.toggle('fa-chevron-down');
                e.target.classList.toggle('fa-chevron-up');
                e.target.classList.toggle('active');
            }else{
                $('.hidden')[0].style.maxHeight  = '2500px';
                e.target.innerText = 'VOIR MOINS';
                e.target.classList.toggle('fa-chevron-down');
                e.target.classList.toggle('fa-chevron-up');
                e.target.classList.toggle('active');
            }

        }
        $('.liste').slick({
            dots: true,
            infinite: true,
            speed: 300,
            slidesToShow: 3,
            slidesToScroll: 3,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3,
                        infinite: true,
                        dots: true
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 2
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                }
                // You can unslick at a given breakpoint now by adding:
                // settings: "unslick"
                // instead of a settings object
            ]
        });
    </script>
{% endblock %}
